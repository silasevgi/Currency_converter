<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> Currency Converter | Foreign Exchange Rates | DSES Finance </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
   

</head>

<body >
    <div class="container col-sm-12" >
        <div id="header">
            <a href="/home"><img class="logo" src="/images/4.png" alt="Logo"></a> <!--Logo image-->
            
            <nav class="navigation">
                <a href="/home">Home </a>
            </nav>

        </div>
        <div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

            <div class="panel panel-info">
                <div class="">
                    <div class="panel-title"> <h2>Sign Up</h2></div>
                    
                </div>  
                <div class="panel-body">
                    <% if (message.length> 0) { %>
                        <div class="alert alert-success col-sm-12">
                            <%= message %>
                        </div>
                        <% } %>

                    <form id="signupform" class="form-horizontal" role="form" method="post" action="/signup" ">
                        
                            
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                    <p>Error:</p>
                                    <span></span>
                                </div>
                             <div id="form-group1">
                                <div class="form-group">
                                    
                                    <div class="col-md-8">
                                    <input type="text" class="form-control" name="first_name"  required>
                                     <label for="first_name" class="col-md-3 ">First Name</label>
                                            
                                    </div>
                                </div>
                                <div class="form-group">
                                   
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" name="last_name"
                                             required>
                                             <label for="last_name" class="col-md-3 ">Last Name</label>
                                    </div>
                                </div>
                                <div class="form-group">
                        
                                    <div class="col-md-8" >
                                        <input type="number" class="form-control" name="wallet"
                                           min="100" max="100000" required>
                                            <label for="wallet" class="col-md-3 ">Wallet (TRY) </label>
                                            
                                    </div>
                                   
                            
                            </div>
                               
                            </div>
                            <div id="form-group2">
                                <div class="form-group">
                                    
                                    <div class="col-md-8">
                                        <input type="email" class="form-control" name="user_name"
                                            required>
                                            <label for="user_name" class="col-md-3">Email</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    
                                    <div class="col-md-8">
                                        <input type="password" class="form-control" name="password"
                                            required>
                                            <label for="password" class="col-md-3 ">Password</label>
                                    </div>
                                </div>
                                

                                <div class="form-group">
                                    <!-- Button -->
                                    <div class=" col-md-12">

                                        <button id="btn-signup" type="submit" class="btn btn-signup"><i class="fa-solid fa-right-to-bracket" style="color:rgb(17, 3, 78)"></i> &nbsp Sign Up</button>
                                        <button id="btn-signin" type="submit" class="btn btn-signin"><i class="fa-solid fa-right-to-bracket" style="color: rgb(17, 3, 78)"></i> &nbsp Sign In</button>
                                        
                                  </div>
                                  
                                    
                                </div>
                              
                            </div>  




                    </form>
                </div>
            </div>

</div>
        	<footer class="bg-light text-center text-lg-start">
                <!-- Copyright -->
                <div class="text-center p-3">
                    Â© 2023 Copyright
                    <a class="text-dark " style="text-decoration: none;" href="/home">DSES Finance</a>
                </div>
                <!-- Copyright -->
            </footer>
    </div>
    <script>
        $(document).ready(function() {
            // Handle form submission
            $("#btn-signin").click(function(req,res) {
                window.location.href = "/login";
             
            });

        });
    </script>

</body>

</html>